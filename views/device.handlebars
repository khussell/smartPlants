<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="/css/cmGauge.css">

<div class="skyDim"></div>
<div class="sky"></div>

<div class="entireInfo">
  <div class="container">
    <div class="row">
      <div class="col s12 pt-1">
        <a href="/users/{{device.User.userName}}" class="left-align">Back to Devices</a>
        <h3 class="center-align mt-0 deviceHead">{{device.User.userName}}'s {{device.Plant.plantName}}</h3>
        <ul class="tabs tabs-fixed-width z-depth-1">
          <li class="tab col s3"><a href="#summaryTab" class="active">Summary</a></li>
          <li class="tab col s3"><a href="#chartTab">Chart</a></li>
          <li class="tab col s3"><a href="#dataTab">Data</a></li>
        </ul>
      </div>
      <div id="summaryTab" class="col s12">
        <div class="row">
          <div class="col s12 m6 xl4">

            {{> device/statcard-block property="Moisture" icon="fa-tint" value=currentStats.moisture unit="%" maxValue=1024}}

          </div>
          <div class="col s12 m6 xl4">

            {{> device/statcard-block property="Light" icon="fa-sun" value=currentStats.light unit="%" maxValue=1024}}

          </div>
          <div class="col s12 m6 xl4">

            {{> device/statcard-block property="Temperature" icon="fa-thermometer-half " value=currentStats.sensorTempFehr unit="Â°" maxValue=100}}

          </div>
          <div class="col s12 m6 xl4">

            {{> device/statcard-block property="Precipitation" icon="fa-cloud-rain" value=currentStats.precipIntensity unit="%" maxValue=1024}}

          </div>
          <div class="col s12 m6 xl4">

            {{> device/statcard-block property="Humidity" icon="fa-smog" value=currentStats.humidity unit="%" maxValue=1024}}

          </div>
          <div class="col s12 m6 xl4">

            {{> device/statcard-block property="Wind" icon="fa-wind" value=currentStats.windSpeed unit=" mph" maxValue=10}}

          </div>
        </div>
      </div>
      <div id="chartTab" class="col s12 card">
        <div class="row">
          <div class="input-field col s12 m6">
            <select id="propertySelect">
              <option value="moisture" selected>Moisture</option>
              <option value="light">Light</option>
              <option value="sensorTemp">Temperature</option>
              <option value="precipIntensity">Precipitation</option>
              <option value="humidity">Humidity</option>
              <option value="windSpeed">Wind Speed</option>
            </select>
          </div>
          <div class="input-field col s12 m6">
            <select id="rangeSelect">
              <option value="day" selected>Day</option>
              <option value="week">Week</option>
              <option value="month">Month</option>
              <option value="year">Year</option>
              <option value="all">All</option>
            </select>
          </div>
        </div>
        <div id="chart"></div>
      </div>
      <div id="dataTab" class="col s12 card">
        <table id="dataTable" style="display: none;">
          <thead>
            <tr>
              <th>Timestamp</th>
              <th>Moisture</th>
              <th>Light</th>
              <th>Temperature</th>
              <th>Precipitation</th>
              <th>Humidity</th>
              <th>Wind Speed</th>
            </tr>
          </thead>
          <tbody>
            {{#each device.LiveStats}}
            {{> device/datapoint-block}}
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="grassDiv">
</div>

